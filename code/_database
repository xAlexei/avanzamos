CREATE DATABASE avanzamos

CREATE TABLE users(
    _idUser INT AUTO_INCREMENT, 
    username VARCHAR (255),
    password VARCHAR (255),
    email VARCHAR (255),
    name VARCHAR (255),
    phone VARCHAR (60),
    companyName VARCHAR (255),
    description VARCHAR (255), 
    category VARCHAR (255),
    address VARCHAR (255),
    typeUser VARCHAR (255),
    verification INT DEFAULT 0,
    PRIMARY KEY (_idUser)
)

CREATE TABLE specialEvents(
    id INT AUTO_INCREMENT NOT NULL, 
    eventName VARCHAR (255),
    price INT,
    description VARCHAR (255),
    fecha date,
    ubication VARCHAR (255),
    PRIMARY KEY (id)
)

CREATE TABLE events (
    _idEvent INT AUTO_INCREMENT,
    eventName VARCHAR (255), 
    price VARCHAR (255),
    description VARCHAR (255), 
    category VARCHAR (255), 
    ubication VARCHAR (255), 
    fecha date, 
    active INT DEFAULT 1,
    PRIMARY KEY (_idEvent)
)

CREATE TABLE participation (
    _id INT AUTO_INCREMENT NOT NULL,
    eventName VARCHAR (255),
    username VARCHAR (255),
    ubication VARCHAR (255),
    fecha date,
    PRIMARY KEY (_id)
)

CREATE TABLE asistencia (
    id INT AUTO_INCREMENT NOT NULL, 
    idEvent INT, 
    eventName VARCHAR (255), 
    description VARCHAR (255),
    username VARCHAR (255),
    asistencia INT DEFAULT 0, 
    fecha date,
    PRIMARY KEY (id),
    FOREIGN KEY (idEvent) REFERENCES events (_idEvent)
)

CREATE TABLE meetings (
    _idMeet INT AUTO_INCREMENT,
    meetName VARCHAR (255),
    creator VARCHAR (255),
    category VARCHAR (255),
    ubication VARCHAR (255).
    fecha date DEFAULT NOT NULL, 
    username VARCHAR (255),
    PRIMARY KEY (_idMeet),
)

CREATE TABLE personalMeetings (
    id INT AUTO_INCREMENT NOT NULL, 
    userName VARCHAR (255),
    person VARCHAR (255), 
    description VARCHAR (255),
    PRIMARY KEY (id)
)

CREATE TABLE rewards(
    id INT AUTO_INCREMENT NOT NULL, 
    username VARCHAR (255),
    amount INT DEFAULT 0,
    PRIMARY KEY (id)
)

